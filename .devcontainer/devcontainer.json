{
    "name": "cp-workspace",
    "build": {
        "dockerfile": "./Dockerfile",
        "args": {
            "LOCAL_UID": "1000",
        }
    },

    "workspaceMount": "source=${localWorkspaceFolder}/workspace,target=/home/vscode/workspace,type=bind,consistency=cached",
    "workspaceFolder": "/home/vscode/workspace",
    "postStartCommand": "if cd ac-library; then git pull && cd ..; else git clone https://github.com/atcoder/ac-library; fi",

    "extensions": [
        "ms-vscode.cpptools",
        "jbenden.c-cpp-flylint",
    ],
    "settings": {
        "editor.formatOnSave": true,
        "C_Cpp.autocompleteAddParentheses": true,
        "C_Cpp.clang_format_fallbackStyle": "Google",
        "C_Cpp.default.cppStandard": "c++17",
        "C_Cpp.formatting": "clangFormat",
        "c-cpp-flylint.lizard.enable": false,
        "c-cpp-flylint.flawfinder.enable": false,
        "c-cpp-flylint.flexelint.enable": false,
        "c-cpp-flylint.standard": ["c++17"],
    }
}
